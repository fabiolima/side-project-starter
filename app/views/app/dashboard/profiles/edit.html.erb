<%= content_for :nav_title do %> Profile <%end%>
<% content_for :pre_content do %>
  <%= link_to app_dashboard_path, class: "w-auto inline-block mb-4 text-gray-800 p-1 px-2 text-sm" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 inline-block me-1">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75 3 12m0 0 3.75-3.75M3 12h18" />
    </svg>
    Back to dashboard
  <% end %>
<% end %>
<% if flash["notice"] %>
  <p class="p-4 bg-indigo-100 rounded-xl mb-6">
    <%= flash["notice"] %>
  </p>
<% end %>
<% if @profile.errors.any? %>
  <div id="error_explanation" data-turbo-cache="false" class="p-4 bg-indigo-100 rounded-md mb-6" >
    <h2 class="font-semibold mb-4">
      <%= I18n.t("errors.messages.not_saved",
                  count: @profile.errors.count,
                  resource: @profile.class.model_name.human.downcase)
        %>
    </h2>
    <ul class="list-disc list-inside">
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@profile, url: app_dashboard_profile_path(@profile), method: :put) do |f| %>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
    <div class="field mb-6">
      <%= f.label :first_name, class: "block text-sm font-medium text-gray-800 mb-2" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "email", placeholder: "", class: "shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="field mb-4">
      <%= f.label :last_name, class: "block text-sm font-medium text-gray-800 mb-2" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "email", placeholder: "", class: "shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>
  <div class="actions flex justify-end">
    <%= link_to "Cancel", app_dashboard_path, class: "py-2 px-4 mr-4 rounded-md shadow-sm text-sm font-medium hover:bg-gray-200  focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-100" %>
    <%= f.submit "Save", class: "cursor-pointer flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
