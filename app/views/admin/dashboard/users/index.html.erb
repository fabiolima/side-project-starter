<%= content_for :nav_title do %> Users <%end%>
<% content_for :pre_content do %>
  <%= link_to admin_dashboard_path, class: "w-auto inline-block mb-4 text-gray-800 p-1 px-2 text-sm" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 inline-block me-1">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75 3 12m0 0 3.75-3.75M3 12h18" />
    </svg>
    Back to dashboard
  <% end %>
<% end %>
<div class="p-4 md:p-8 bg-white rounded-3xl">
  <%= form_tag(admin_dashboard_users_path, method: :get, class: "flex mb-8") do %>
    <%= text_field_tag(:search, params[:search], class: "w-full shadow-sm rounded px-3 border border-gray-black bg-slate-50 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Search by email" ) %>
    <%= submit_tag("Search", :id => "button", :class => "ms-4 btn-primary") %>
  <% end %>
  <ul>
    <% if !@users.empty? %>
      <li class="py-3 flex items-center border-b">
        <p class="w-[200px] font-semibold  hidden sm:block">Name</p>
        <p class="w-[200px] font-semibold">E-mail</p>
        <p class="w-[200px] font-semibold  hidden sm:block">Stripe Id</p>
      </li>
      <%= render @users %>
    <% end %>
  </ul>
  <section class="mt-8 flex justify-between items-center">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    <%== pagy_info(@pagy) %>
  </section>
</div>
