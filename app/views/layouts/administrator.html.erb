            </div>
            -->
          </div>
        </div>
        <!-- Mobile menu, show/hide based on menu state. -->
        <div class="hidden " id="mobile-menu" data-toggle-target='toggleable'>
          <div class="space-y-1 px-2 pb-3 pt-2 transition ease-in duration-75">
            <%= active_link_to "Dashboard", admin_dashboard_path, class: "block rounded-md px-3 py-2 text-base font-medium" %>
            <%= active_link_to "Users", admin_dashboard_users_path, class: "block rounded-md px-3 py-2 text-base font-medium" %>
          </div>
        </div>
      </nav>
    </header>
    <aside class="hidden fixed inset-y-0 left-0 bg-white shadow-md max-h-screen w-60 lg:block">
      <div class="flex flex-col justify-between h-full">
        <div class="flex-grow">
          <div class="px-4 h-16 flex items-center justify-center text-center border-b">
            <%= link_to root_path do %>
              <h1 class="text-xl font-bold leading-none"> Side Project </h1>
            <% end %>
          </div>
          <div class="p-4">
            <ul class="space-y-1">
              <li>
                <%= active_link_to admin_dashboard_path, active_classes: "bg-yellow-200 text-yellow-900 hover:text-yellow-900", class: "flex items-center rounded-xl font-bold text-sm py-3 px-4 text-gray-600 hover:text-black" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 mr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                  </svg>
                  Dashboard
                <% end %>
              </li>
              <li>
                <%= active_link_to admin_dashboard_users_path, active_classes: "bg-yellow-200 text-yellow-900 hover:text-yellow-900", class: "flex items-center rounded-xl font-bold text-sm py-3 px-4 text-gray-600 hover:text-black" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-2 size-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
                  </svg>
                  Users
                <% end %>
              </li>
            </ul>
          </div>
        </div>
        <div class="p-4">
          <%= button_to destroy_admin_session_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700 hover:text-black font-bold" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 inline-block me-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75 3 12m0 0 3.75-3.75M3 12h18"></path>
            </svg>
            Logout
          <% end %>
        </div>
      </div>
    </aside>
    <main class="px-4 min-h-screen ml-0 lg:ml-60 overflow-auto">
      <div class="max-w-4xl mx-auto">
        <%= yield :pre_content %>
        <% if flash["notice"] %>
          <p class="p-4 bg-indigo-100 rounded-xl mb-4">
            <%= flash["notice"] %>
          </p>
        <% end %>
        <div class="p-8 bg-white rounded-3xl">
          <%= yield %>
        </div>
      </div>
    </main>
  </body>
</html>
